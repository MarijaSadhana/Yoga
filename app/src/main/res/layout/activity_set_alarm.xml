<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SetAlarm">

    <TextView
        android:id="@+id/txtAlarmSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Избери време од денот \nкога сакаш да вежбаш јога"
        android:textAllCaps="true"
        android:textColor="@color/purple"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="50dp"/>

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:numbersSelectorColor="@color/grey"
        android:numbersTextColor="@color/textColorPurple"
        android:headerBackground="@color/purple"
        android:numbersInnerTextColor="@color/grey"/>

    <Button
        android:id="@+id/btn_startAlarm"
        android:text="активирај аларм"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/textColorPurple"
        android:onClick="startAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

</LinearLayout>