<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/asana_card"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="@dimen/card_margin_bottom"
    android:layout_marginTop="@dimen/card_margin_top"
    android:layout_marginStart="@dimen/card_margin_start"
    android:layout_marginEnd="@dimen/card_margin_end"
    app:cardElevation="@dimen/card_elevation"
    app:cardCornerRadius="@dimen/card_corner_radius"
    android:background="@color/backgroundWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:outlineAmbientShadowColor="@color/shadowItemColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/asana_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingEnd="@dimen/card_padding_right"
            android:paddingTop="@dimen/card_padding_top"
            android:paddingBottom="@dimen/card_padding_bottom"
            android:paddingStart="@dimen/card_padding_left">

            <TextView
                android:id="@+id/mk_name_asana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/textColorGray"
                android:textSize="@dimen/textSize_mk_name"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/sanskrit_name_asana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/textColorGray"
                android:textSize="@dimen/textSize_sanskrit_name"
                android:textStyle="italic"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="end">

                <TextView
                    android:id="@+id/categoryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/asana_category"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textColor="@color/textColorGray"
                    android:textSize="10sp"
                    android:textStyle="italic"
                    android:layout_gravity="bottom"/>

                <TextView
                    android:id="@+id/asana_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textColor="@color/textColorGray"
                    android:textSize="10sp"
                    android:textStyle="italic"
                    android:layout_gravity="bottom"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
