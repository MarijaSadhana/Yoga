<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/news_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin_bottom"
    android:layout_marginTop="@dimen/card_margin_top"
    android:layout_marginEnd="@dimen/card_margin_right"
    android:layout_marginStart="@dimen/card_margin_left"
    app:cardElevation="@dimen/card_elevation"
    app:cardCornerRadius="@dimen/card_corner_radius"
    android:background="@color/backgroundWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/news_logo"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/blank_logo"/>

        <LinearLayout
            android:id="@+id/llayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    
            <TextView
                android:id="@+id/web_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/textColorPurple"
                android:textStyle="bold"
                android:paddingTop="@dimen/card_padding_top"
                android:paddingStart="@dimen/card_padding_left"
                android:paddingEnd="@dimen/card_padding_right"
                android:paddingBottom="@dimen/card_padding_bottom"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
    
                <TextView
                    android:id="@+id/textDatePublished"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_published"
                    android:textColor="@color/textColorGray"
                    android:textSize="12sp"
                    android:paddingStart="@dimen/card_padding_left"
                    android:paddingEnd="@dimen/card_padding_right"
                    android:paddingBottom="@dimen/card_padding_bottom"/>
    
                <TextView
                    android:id="@+id/published_at"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textColorGray"
                    android:textSize="12sp"
                    android:paddingBottom="@dimen/card_padding_bottom"/>
    
            </LinearLayout>

        </LinearLayout>
        
    </LinearLayout>

</androidx.cardview.widget.CardView>

