<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sadhana.yoga">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon_round"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.sadhana.yoga.activity.SetAlarm"></activity>
        <activity android:name="com.sadhana.yoga.activity.RegisterActivity" />
        <activity android:name="com.sadhana.yoga.activity.LoginActivity" />
        <activity android:name="com.sadhana.yoga.activity.WebNewsActivity" />
        <activity android:name="com.sadhana.yoga.activity.DetailProgram" />
        <activity android:name="com.sadhana.yoga.activity.AboutUsActivity" />
        <activity android:name="com.sadhana.yoga.activity.DetailsAsana" />
        <activity android:name="com.sadhana.yoga.activity.DetailsMeditation" />
        <activity android:name="com.sadhana.yoga.activity.DetailsPranayama" />
        <activity android:name="com.sadhana.yoga.activity.SplashActivity">

        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

        <activity android:name="com.sadhana.yoga.activity.MainActivity"/>

        <receiver android:name="com.sadhana.yoga.activity.AlertReceiver" />
    </application>

</manifest>