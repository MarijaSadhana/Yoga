<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yoga">

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:icon="@drawable/logo_vector"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_vector"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".fragments.WebNews"></activity>
        <activity android:name=".activity.SeeAllAsanas" />
        <activity android:name=".activity.SetAlarm" />
        <activity android:name=".activity.AboutUsActivity" />
        <activity android:name=".activity.DetailsAsana" />
        <activity android:name=".activity.DetailsMeditation" />
        <activity android:name=".activity.DetailsPranayama" />
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".activity.AlarmReceiver" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

</manifest>